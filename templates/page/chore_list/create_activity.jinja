{% extends "layout/default.jinja" %}

{% block title %}Create âœ…&nbsp;Activity{% endblock %}

{% block back_link %}
    <a href="/chore-lists/{{ chore_list.id }}/activities" class="secondary">&larr; Back</a>
{% endblock %}

{% block content %}
    <form method="post">
        <label for="chore_id">Chore</label>
        <select id="chore_id" name="chore_id" required>
            <option selected disabled value=""></option>
            {% for chore in chores %}
                <option value="{{ chore.id }}">{{ chore.name }} ({{ chore.points}} PT)</option>
            {% endfor %}
        </select>

        <label for="date">Date</label>
        <input id="date" name="date" type="date" value="{{ now.format("%Y-%m-%d") }}" />

        <button type="submit">Create</button>
    </form>
{% endblock %}
