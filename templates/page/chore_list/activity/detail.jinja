{% extends "layout/default.jinja" %}

{% block icon %}âœ…{% endblock %}
{% block title %}Activity{% endblock %}

{% block teaser %}
    For <a href="/chore-lists/{{ chore_list.id }}" class="secondary">ðŸ“‹&nbsp;{{ chore_list.name }}</a>
{% endblock %}

{% block back_link %}
    <a href="/chore-lists/{{ chore_list.id }}/activities" rel="parent" class="secondary">&larr; Back</a>
{% endblock %}

{% block navigation %}
    <ul>
        <li><a href="/chore-lists/{{ chore_list.id }}/activities" aria-current="page">
            <div class="icon">âœ…</div>
            <div class="label">Activities</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/chores">
            <div class="icon">ðŸ§¹</div>
            <div class="label">Chores</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/users">
            <div class="icon">ðŸ‘¤</div>
            <div class="label">Users</div>
        </a></li>
    </ul>
{% endblock %}

{% block content %}
    {% if activity.is_deleted() || chore.is_deleted() || chore_list.is_deleted() %}
        <div>
            <em>This activity has been deleted</em>
        </div>

        <br>
    {% endif %}

    <table>
        <tr>
            <th scope="row">Date</th>
            <td>{{ activity.date.format("%Y-%m-%d") }}</td>
        </tr>
        <tr>
            <th scope="row">User</th>
            <td><a href="/chore-lists/{{ chore_list.id }}/users/{{ user.id }}" class="secondary">ðŸ‘¤&nbsp;{{ user.name }}</a></td>
        </tr>
        <tr>
            <th scope="row">Chore</th>
            <td><a href="/chore-lists/{{ chore_list.id }}/chores/{{ chore.id }}" class="secondary">ðŸ§¹&nbsp;{{ chore.name }}</a>&nbsp;({{ chore.points }}P)</td>
        </tr>
        {% if let Some(comment) = activity.comment.clone() %}
            <tr>
                <th scope="row">Comment</th>
                <td>{{ comment|escape|linebreaksbr|safe }}</td>
            </tr>
        {% endif %}
    </table>

    <br>

    {% if activity.is_deleted() %}
        <div>
            <button type="submit" form="activity_restore" style="width: auto;">â®Œ Restore</button>
            <form id="activity_restore" method="post" action="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}/restore"></form>
        </div>
    {% else if !chore.is_deleted() && !chore_list.is_deleted() && activity.user_id == auth_session.user_id %}
        <div>
            {% if allow_edit %}
                <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}/update" role="button">âœŽ Edit</a>
            {% endif %}

            <button type="submit" form="activity_delete" class="outline danger" style="width: auto;">âœ— Delete</button>

            <form id="activity_delete" method="post" action="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}/delete"></form>
        </div>
    {% endif %}
{% endblock %}
