{% extends "layout/default.jinja" %}

{% block icon %}âœ…{% endblock %}
{% block title %}Activities{% endblock %}

{% block teaser %}
    For <a href="/chore-lists/{{ chore_list.id }}" class="secondary">ðŸ“‹&nbsp;{{ chore_list.name }}</a>
{% endblock %}

{% block back_link %}
    <a href="/chore-lists/{{ chore_list.id }}" rel="parent" class="secondary">&larr; Back</a>
{% endblock %}

{% block navigation %}
    <ul>
        <li><a href="/chore-lists/{{ chore_list.id }}/activities" aria-current="page">
            <div class="icon">âœ…</div>
            <div class="label">Activities</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/chores">
            <div class="icon">ðŸ§¹</div>
            <div class="label">Chores</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/users">
            <div class="icon">ðŸ‘¤</div>
            <div class="label">Users</div>
        </a></li>
    </ul>
{% endblock %}

{% block content %}
    <div>
        <a href="/chore-lists/{{ chore_list.id }}/activities/create" role="button">+ Log Activity</a>
    </div>

    <br>

    {% for (date, activities_of_date) in activities_by_date %}
        <h6>{{ date.format("%Y-%m-%d") }}</h6>
        {% for activity in activities_of_date %}
            <ul>
                <li>
                    <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}">
                        {% for chore in chores %}
                            {% if chore.id == activity.chore_id %}
                                <span style="display: inline-block; text-decoration: inherit;">
                                    {{ chore.name }}&nbsp;({{ chore.points }}P)
                                </span>
                            {% endif %}
                        {% endfor %}

                        {% for user in users %}
                            {% if user.id == activity.user_id %}
                                <span style="display: inline-block; text-decoration: inherit;">
                                    by {{ user.name }}
                                </span>
                            {% endif %}
                        {% endfor %}
                    </a>
                </li>
            </ul>
        {% endfor %}
    {% endfor %}

    {% if ! deleted_activities.is_empty() %}
        <br>
        <br>

        <div>
            <h4>Deleted âœ…&nbsp;Activities</h4>
            <ul>
                {% for activity in deleted_activities %}
                    <li>
                        <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}">
                            {% for chore in chores %}
                                {% if chore.id == activity.chore_id %}
                                    <span style="display: inline-block; text-decoration: inherit;">
                                        {{ chore.name }}&nbsp;({{ chore.points }}P)
                                    </span>
                                {% endif %}
                            {% endfor %}

                            {% for user in users %}
                                {% if user.id == activity.user_id %}
                                    <span style="display: inline-block; text-decoration: inherit;">
                                        by {{ user.name }}
                                    </span>
                                {% endif %}
                            {% endfor %}

                            <span style="display: inline-block; text-decoration: inherit;">
                                at {{ activity.date.format("%Y-%m-%d") }}
                            </span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}
