{% extends "layout/default.jinja" %}

{% block icon %}‚úÖ{% endblock %}
{% block title %}Activities{% endblock %}

{% block teaser %}
    Of <a href="/chore-lists/{{ chore_list.id }}/chores/{{ chore.id }}" class="secondary">üßπ&nbsp;{{ chore.name }}</a>
{% endblock %}

{% block back_link %}
    <a href="/chore-lists/{{ chore_list.id }}/chores/{{ chore.id }}" rel="parent" class="secondary text-decoration-none underline-on-hover">&larr; Back</a>
{% endblock %}

{% block meta_actions %}
    <a href="/chore-lists/{{ chore_list.id }}/activities/create" class="secondary text-decoration-none underline-on-hover">+ Add</a>
{% endblock %}

{% block navigation %}
    <ul>
        <li><a href="/chore-lists/{{ chore_list.id }}/activities">
            <div class="icon">‚úÖ</div>
            <div class="label">Activities</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/chores" aria-current="page">
            <div class="icon">üßπ</div>
            <div class="label">Chores</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/users">
            <div class="icon">üë§</div>
            <div class="label">Users</div>
        </a></li>
        <li><a href="/chore-lists/{{ chore_list.id }}/settings">
            <div class="icon">‚öôÔ∏è</div>
            <div class="label">Settings</div>
        </a></li>
    </ul>
{% endblock %}

{% block content %}
    <div class="timeline">
        {% for (date, activities_of_date) in activities_by_date %}
            <div class="timeline-date-separator">{{ date.format("%Y-%m-%d") }}</div>
            <ul class="card-container collapse">
                {% for activity in activities_of_date %}
                    <li>
                        <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}" class="card">
                            {% for user in users %}
                                {% if user.id == activity.user_id %}
                                    <div class="title">{{ user.name }}</div>
                                {% endif %}
                            {% endfor %}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>

    {% if ! deleted_activities.is_empty() %}
        <br>

        <details>
            <summary class="arrow-left text-muted">Deleted Activities</summary>
            <ul class="card-container collapse">
                {% for activity in deleted_activities %}
                    <li>
                        <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}" class="card">
                            {% for user in users %}
                                {% if user.id == activity.user_id %}
                                    <div class="title">{{ user.name }}</div>
                                {% endif %}
                            {% endfor %}

                            <small class="text-muted">
                                {{ activity.date.format("%Y-%m-%d") }}
                            </small>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </details>
    {% endif %}
{% endblock %}
