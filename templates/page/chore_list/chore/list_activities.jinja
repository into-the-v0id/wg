{% extends "layout/default.jinja" %}

{% block title %}âœ…&nbsp;Activities{% endblock %}

{% block teaser %}
    For <a href="/chore-lists/{{ chore_list.id }}/chores/{{ chore.id }}" class="secondary">ðŸ§¹&nbsp;{{ chore.name }}</a>
{% endblock %}

{% block back_link %}
    <a href="/chore-lists/{{ chore_list.id }}/chores/{{ chore.id }}" class="secondary">&larr; Back</a>
{% endblock %}

{% block content %}
    <div>
        <a href="/chore-lists/{{ chore_list.id }}/activities/create" role="button">Log Activity</a>
    </div>

    <br>

    <ul>
        {% for activity in activities %}
            {% if !activity.is_deleted() %}
                <li>
                    {% for user in users %}
                        {% if user.id == activity.user_id %}
                            <a href="/users/{{ user.id }}" class="secondary">{{ user.name }}</a>
                        {% endif %}
                    {% endfor %}
                    at <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}">{{ activity.date.format("%Y-%m-%d") }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

    <br>
    <br>

    <div>
        <h4>Deleted âœ…&nbsp;Activities</h4>
        <ul>
            {% for activity in activities %}
                {% if activity.is_deleted() %}
                    <li>
                        {% for user in users %}
                            {% if user.id == activity.user_id %}
                                <a href="/users/{{ user.id }}" class="secondary">{{ user.name }}</a>
                            {% endif %}
                        {% endfor %}
                        at <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}">{{ activity.date.format("%Y-%m-%d") }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}
