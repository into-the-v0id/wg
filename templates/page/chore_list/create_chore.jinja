{% extends "layout/default.jinja" %}

{% block title %}Create Chore{% endblock %}

{% block back_link %}
    <a href="/chore-lists/{{ chore_list.id }}/chores" class="secondary">&larr; Back</a>
{% endblock %}

{% block content %}
    <form method="post">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" required />

        <label for="points">Points</label>
        <input id="points" name="points" type="number" required />

        <button type="submit">Create</button>
    </form>
{% endblock %}
