{% block content %}
    <ul>
        {% for activity in activities %}
            {% if !activity.is_deleted() %}
                <li>
                    <a href="/chore-lists/{{ chore_list.id }}/activities/{{ activity.id }}">
                        {{ activity.date.format("%Y-%m-%d") }}

                        {% for chore in chores %}
                            {% if chore.id == activity.chore_id %}
                                {{ chore.name }}&nbsp;({{ chore.points }}P)
                            {% endif %}
                        {% endfor %}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

