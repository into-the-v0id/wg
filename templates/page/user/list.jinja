{% extends "layout/default.jinja" %}

{% block title %}Users{% endblock %}

{% block back_link %}
    <a href="/" class="secondary">&larr; Back</a>
{% endblock %}

{% block content %}
    <div>
        <ul>
            {% for user in users %}
                {% if !user.is_deleted() %}
                    <li>
                        <a href="/users/{{ user.id }}">{{ user.name }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        <a href="/users/create" role="button">Create</a>
    </div>

    <br>
    <br>

    <div>
        <h4>Past Users</h4>
        <ul>
            {% for user in users %}
                {% if user.is_deleted() %}
                    <li>
                        <a href="/users/{{ user.id }}">{{ user.name }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}
