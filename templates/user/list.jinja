<ul>
    {% for user in users %}
        {% if !user.is_deleted() %}
            <li>
                <a href="/users/{{ user.id }}">{{ user.first_name }}</a>
            </li>
        {% endif %}
    {% endfor %}
</ul>
<a href="/users/create">Create</a>

<details>
  <summary>Past Users</summary>
  <ul>
      {% for user in users %}
          {% if user.is_deleted() %}
              <li>
                  <a href="/users/{{ user.id }}">{{ user.first_name }}</a>
              </li>
          {% endif %}
      {% endfor %}
  </ul>
</details>
