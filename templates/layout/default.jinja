<!doctype html>
<html lang="en" data-theme="dark">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="{{ crate::application::assets::get_url("/css/index.css").unwrap() }}">

        <meta name="color-scheme" content="dark">
        <meta name="format-detection" content="telephone=no">
        <meta name="msapplication-tap-highlight" content="no">

        <meta name="robots" content="noindex, nofollow">

        {% block head %}{% endblock %}
    </head>
    <body>
        <header class="container">
            <div>
                {% block back_link %}&nbsp;{% endblock %}
            </div>

            <br>

            <hgroup>
                <h1>{% block title %}{% endblock %}</h1>
                <p style="margin-top: 0.25rem;">{% block teaser %}{% endblock %}</p>
            </hgroup>
        </header>

        <main class="container">
            {% block content %}{% endblock %}
        </main>

        <footer class="container">
            <div style="text-align: right;">
                <a href="/legal/privacy-policy" class="secondary">Privacy Policy</a>
            </div>
        </footer>
    </body>
</html>
